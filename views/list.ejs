<%- include('header'); -%>

  <body>

    <div class="box" id="heading">
      <h1>
        <%= listName %>
      </h1>
    </div>

    <div class="box">
      <% newTasks.forEach(function(task){%>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=task._id%>" onChange='this.form.submit()'>
            <input type="hidden" name="listName" value="<%= listName%>"></input>
            <p>
              <%= task.name%>
            </p>
          </div>
        </form>
        <%});%>
          <form action=" /" method="post">
            <input type="text" name="textBox" placeholder="New Item" />
            <button type="submit" name="listName" value="<%= listName %>">+</button>
          </form>
    </div>

  </body>

  <%- include('footer'); -%>